.lanyard-wrapper {
  position: relative;
  z-index: inherit;
  width: 200%;
  height: 80vh;
  display: flex;
  justify-content: center;
  align-items: center;
  transform: scale(0.85);
  transform-origin: center;
  overflow: visible !important;
  margin-left: -50%;
  margin-right: -50%;
  pointer-events: none;
}

.lanyard-wrapper canvas {
  overflow: visible !important;
  width: 100% !important;
  max-width: none !important;
  pointer-events: auto !important;
}

.lanyard-wrapper * {
  overflow: visible !important;
}

